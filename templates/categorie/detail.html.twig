{% extends 'base.html.twig' %}

{% block title %}Modules De La Cat√©gorie{% endblock %}

{% block body %}

    <h1>{{ categorie.nomCategorie }}</h1>

<div class=containerFormation>

    {% for module in modules %}

    <div class=formation>

        {{module}}
        <a href="{{ path('delete_module', {'id':categorie.id,'moduleId': module.id}) }}"><i class="fa-solid fa-xmark"></i></a>

    </div> 

    {% endfor %}

    <div id="divBtn">
            <button id="btnAjout">Ajouter un module</button>
        </div>
    
    <div id="overlay">
        <div class="form">
            {{ form_start(formAddModule) }}
            <div class="formRow">
                {{ form_row(formAddModule.nomModule) }}
            </div>
            <div class="formRow">
                {{ form_row(formAddModule.categorie) }}
            </div>
            <div class="btnAjouter">
                {{ form_row(formAddModule.ajouter) }}
            </div>
            {{ form_end(formAddModule) }}
        </div>    
    </div>

    

</div>

{% endblock %}