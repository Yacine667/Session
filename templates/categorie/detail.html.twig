{% extends 'base.html.twig' %}

{% block title %}Modules De La Catégorie{% endblock %}

{% block body %}

    <h1>Liste Des Modules De La Catégorie {{ categorie.nomCategorie }}</h1>

<div class=containerModuleCategorie>

    <div class=containerListModuleCategorie>

    {% for module in modules %}

    <div class=module>

        {{module}}
        <span  class=actionIcons><a href="{{ path('delete_module', {'id':categorie.id,'moduleId': module.id}) }}"><i class="uil uil-times"></i></a></span>

    </div> 

    {% endfor %}

    </div>

<div class=containerFormulaireModule>

    <h2>Ajouter un module</h2>

        {{ form_start(formAddModule) }}

        <div class=formModule>
            {{ form_row(formAddModule.nomModule) }}
        </div>

        <div class=formModule>
            {{ form_row(formAddModule.categorie) }}
        </div>

        <div class=btnAjouterModule>
            {{ form_row(formAddModule.ajouter) }}
        </div>

        {{ form_end(formAddModule) }}
    
</div>

</div>

{% endblock %}