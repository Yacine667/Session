{% extends 'base.html.twig' %}

{% block title %}Liste Des Catégories{% endblock %}

{% block body %}

<h1>Liste Des Catégories</h1>

<div class=containerCategorie>

    <div class=containerListCategorie>

        {% for categorie in categories %}

        <div onclick="document.location='{{ path('detail_categorie', {'id': categorie.id}) }}'"  class=categorie>
            <p>{{ categorie.nomCategorie }} </p>
        </div>

        {% endfor %}

    </div>

<div class=containerFormulaireCategorie>

    <h2>Ajouter une categorie</h2>

        {{ form_start(formAddCategorie) }}

        <div class=formCategorie>

            {{ form_row(formAddCategorie.nomCategorie) }}

        </div>

        <div class=btnAjouterCategorie>

            {{ form_row(formAddCategorie.ajouter) }}

        </div>
            
        {{ form_end(formAddCategorie) }}

</div>

</div>

{% endblock %}
