{% extends 'base.html.twig' %}

{% block title %}Liste Des Stagiaires{% endblock %}


{% block body %}

<h1>Liste Des Stagiaires</h1>

<div class=containerStagiaire>

    <div class=containerListStagiaire>

        <table>

                <tr>
                    <th>Nom</th>
                    <th>Pr√©nom</th>
                </tr>

                {% for stagiaire in stagiaires %}

                <tr>
                    <td>{{ stagiaire.nomStagiaire }} </td>
                    <td>{{ stagiaire.prenomStagiaire }}</td>
                    <td class="actionIcons"><a href="{{ path('detail_stagiaire', {'id': stagiaire.id}) }}"><i class="uil uil-comment-info"></i></a></td>
                </tr>

                {% endfor %}

        </table>

    </div>
        


    <div class=containerFormulaireStagiaire>

        <h2>Ajouter une categorie</h2>
            
                {{ form_start(formAddStagiaire) }}
                
                <div class=formStagiaire>
                    {{ form_row(formAddStagiaire.nomStagiaire) }}
                    {{ form_row(formAddStagiaire.prenomStagiaire) }}
                    {{ form_row(formAddStagiaire.sexe) }}
                </div>
                
                <div class=formStagiaire>
                    {{ form_row(formAddStagiaire.dateNaissance) }}
                    {{ form_row(formAddStagiaire.adresseStagiaire) }}
                </div>
                
                <div class=formStagiaire>
                    {{ form_row(formAddStagiaire.mailStagiaire) }}
                    {{ form_row(formAddStagiaire.telStagiaire) }}
                </div>
                
                <div class=btnAjouterStagiaire>
                    {{ form_row(formAddStagiaire.ajouter) }}
                </div>
                
                {{ form_end(formAddStagiaire) }}

    </div>

</div>

{% endblock %}
