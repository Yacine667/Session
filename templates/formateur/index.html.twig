{% extends 'base.html.twig' %}

{% block title %}Liste Des Formateurs{% endblock %}

{% block body %}

<h1>Liste Des Formateurs</h1>

<div class=containerFormateur>

    <div class=containerListFormateur>

        <table>

                <tr>
                    <th>Nom</th>
                    <th>Pr√©nom</th>
                </tr>

    {% for formateur in formateurs %}

                <tr>
                    <td>{{ formateur.nomFormateur }} </td>
                    <td>{{ formateur.prenomFormateur }}</td>
                    <td class="actionIcons"><a href="{{ path('detail_formateur', {'id': formateur.id}) }}"><i class="uil uil-comment-info"></i></a></td>
                </tr>

    {% endfor %}

        </table>

    </div>

    <div class=containerFormulaireStagiaire>

        <h2>Ajouter Un Formateur</h2>

                {{ form_start(formAddFormateur) }}
                
                <div class=formFormateur>
                    {{ form_row(formAddFormateur.nomFormateur) }}
                    {{ form_row(formAddFormateur.prenomFormateur) }}
                    {{ form_row(formAddFormateur.mailFormateur) }}
                    {{ form_row(formAddFormateur.telFormateur) }}
                </div>
                
                <div class=btnAjouterFormateur>
                    {{ form_row(formAddFormateur.ajouter) }}
                </div>
                
                {{ form_end(formAddFormateur) }}
            
        </div>

</div>

{% endblock %}
