{% extends 'base.html.twig' %}

{% block title %}Liste Des Formations{% endblock %}

{% block body %}

<h1>Liste Des Formations</h1>

<div class=containerFormation>

    <div class=containerListFormation>

    {% for formation in formations %}

    <div onclick="document.location='{{ path('detail_formation', {'id': formation.id}) }}'"  class=formation>
        <p >{{ formation.nomFormation }} </p>
    </div>

    {% endfor %}

    </div>

    <div class=containerFormulaireFormation>

        <h2>Ajouter une formation</h2>

            {{ form_start(formAddFormation) }}

            <div class="formFormation">

                {{ form_row(formAddFormation.nomFormation) }}

            </div>
            <div class="btnAjouterFormation">

                {{ form_row(formAddFormation.ajouter) }}

            </div>

            {{ form_end(formAddFormation) }}  
    
    </div>
</div>

{% endblock %}
